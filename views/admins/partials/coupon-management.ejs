                <h6 class="mb-4">Designs</h6>
                <div class="table-responsive text-center">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Coupn Code</th>
                                <th scope="col">Discount</th>
                                <th scope="col">Remaining uses</th>
                                <!-- <th scope="col">Last Edited</th> -->
                                <th scope="col">Expire date</th>
                                <th scope="col">Min Purchase</th>
                                <th scope="col">Max offer</th>
                                <th scope="col">Status</th>
                                <th scope="col">Options</th>

                            </tr>
                        </thead>
                        <tbody id="design-table-body">
                            <% coupons.forEach((element, index)=> { %>
                            <tr style="position: relative">
                                <td><%= index+1 %></td>
                                <td><%= element.couponCode %></td>
                                <td><%= element.discountPercentage %></td>
                                <td><%= element.usageLimit %></td>
                                <% const date = new Date(element.expirationDate) %>
                                <td><%= date.toLocaleDateString() %></td>
                                <td><%=  element.purchaseAmount %></td>
                                <td><%=  element.offerUpto %></td>
                                <td><%  if(element.isActive) {%> Active <% } else { %> Deactivated <% } %></td>
                                <td class="designDropdownIcon"><i class="fa fa-ellipsis-v "></i>
                                    <div class="designDropdown">
                                        <div class="designDropdown-content">Edit</div> &nbsp
                                        <div class="designDropdown-content"><%  if(element.isActive) {%> Deactivate <% } else { %> Activate <% } %></div>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>

                    </tbody>
                        
                   
                    </table>
