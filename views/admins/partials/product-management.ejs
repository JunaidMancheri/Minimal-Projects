        <!-- Product table -->

        <div class="col-12" style="width:100%; margin-top: 2rem;display: block;" id="design-table">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Designs</h6>
                <div class="table-responsive text-center">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">Design Code</th>
                                <th scope="col">Price</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Last Edited</th>
                                <th scope="col">Color</th>
                                <th scope="col">COD</th>
                                <th scope="col">Discount</th>
                                <th scope="col">Status</th>
                                <th scope="col">Options</th>

                            </tr>
                        </thead>
                            <tbody id="design-table-body">
                                <% products.forEach((element, index)=> { %>
                                <tr style="position: relative">
                                    <td><%= index+1 %></td>
                                    <td><img src="http://localhost:3000/static/uploads/<%= element.category  %>/<%= element.designCode%>/<%= element.images[0] %>" class="designImage" alt="" srcset=""></td>
                                    <td><%= element.designCode %></td>
                                    <td><%= element.price %></td>
                                    <td><%= element.stock %></td>
                                    <td><%= element.lastEditedBy %></td>
                                    <td><%=  element.exactColor %></td>
                                    <td id="<%= element._id %>COD" ><%  if(element.isCodAvailable) {%> Available <% } else { %> Not Available <% } %></td>
                                    <td><%  if(element.discount == 0) { %> No Discounts <% } else { element.discount + "%" } %></td>
                                    <td id="<%= element._id %>Status"><%  if(element.isActive) {%> Active <% } else { %> Deactivated <% } %></td>
                                    <td class="designDropdownIcon"><i class="fa fa-ellipsis-v "></i>
                                        <div class="designDropdown">
                                            <button class="designDropdown-content" onclick="editProduct('<%= element._id %>')">Edit</button> &nbsp
                                            <button class="designDropdown-content" onclick="changeActiveStatus(this,'<%= element._id %>')"><%  if(element.isActive) {%> Deactivate <% } else { %> Activate <% } %></button>
                                            <button class="designDropdown-content" onclick="changeCODStatus(this,'<%= element._id %>')"><%  if(element.isCodAvailable) {%> Cancel COD <% } else { %> Enable COD <% } %></button>
                                            <!-- <button class="designDropdown-content"><%  if(element.discount == 0) {%> Add discount <% } else { %> Change discount <% } %></button> -->
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
