<script>


    function changeStatus(element, id) {
        fetch('/admin/order/change/status', {
            method: 'PATCH',
            body: JSON.stringify({
                status: element.value,
                id: id,
            }),
            headers: {
                'Content-Type': 'application/json',
            },
        }).then((response) => response.json()).then((data) => {
            if (data.success) {

                const accepted = document.getElementById(`${id}accepted`);
                const shipped = document.getElementById(`${id}shipped`);
                const delivered = document.getElementById(`${id}delivered`);

                if (element.value == 'Delivered') {
                    accepted.classList.remove('red');
                    shipped.classList.remove('red');
                    delivered.classList.remove('red');
                    accepted.classList.add('green');
                    shipped.classList.add('green');
                    delivered.classList.add('green');

                } else if (element.value == 'Shipped') {
                    accepted.classList.remove('red');
                    shipped.classList.remove('red');
                    delivered.classList.remove('red');
                    accepted.classList.add('green');
                    shipped.classList.add('green');
                    delivered.classList.remove('green');
                } else if (element.value == 'Confirmed') {
                    accepted.classList.remove('red');
                    shipped.classList.remove('red');
                    delivered.classList.remove('red');
                    accepted.classList.add('green');
                    shipped.classList.remove('green');
                    delivered.classList.remove('green');
                } else {
                    accepted.classList.remove('green');
                    shipped.classList.remove('green');
                    delivered.classList.remove('green');
                    accepted.classList.add('red');
                    shipped.classList.add('red');
                    delivered.classList.add('red');

                }

            } else console.log(data);
        })
    }

