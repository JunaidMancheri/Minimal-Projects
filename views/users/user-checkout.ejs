                                        <label for="name">Country</label>
                                        <input type="text" placeholder="name" name="country"
                                            value="<%= address.country %>" readonly class="billInput">
                                    </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="name">Address</label>
                                    <input type="text" placeholder="name" name="address" value="<%= address.address %>"
                                        readonly class="billInput">
                                </div>
                                <div class="col-md-6">
                                    <label for="name">Town/City</label>
                                    <input type="text" placeholder="name" name="city" value="<%= address.city %>"
                                        readonly class="billInput">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="name">State</label>
                                    <input type="text" placeholder="name" name="state" value="<%= address.state %>"
                                        readonly class="billInput">
                                </div>
                                <div class="col-md-6">
                                    <label for="name">Zip Code</label>
                                    <input type="text" placeholder="name" name="zip" value="<%= address.zip %>" readonly
