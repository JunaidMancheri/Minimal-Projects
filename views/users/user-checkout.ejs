<script>
    function chooseAnother(id) {
        fetch('/user/checkout/get/address', {
            method: 'POST',
            body: JSON.stringify({
                id: id,
            }),
            headers: {
                'Content-Type': 'application/json',
            },
        }).then((response) => response.json()).then((data) => {
            if (data.error) {
                alert(data.error);
            } else {
                const addressContainer = document.getElementById('addressContainer');
                addressContainer.innerHTML = '';
                data.forEach((address) => {


                    addressContainer.innerHTML += ` <div class="row d-flex  justify-content-center">
        
        <div class="col-lg-11" id=${address._id}>
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Name</p>
                </div>
                <div class="col-sm-3">
                  <p class="text-muted mb-0">
                    ${address.name}
                  </p>
                </div>

                <div class="col-sm-3">
                  <p class="mb-0">Address</p>
                </div>
                <div class="col-sm-3">
                  <p class="text-muted mb-0">
                    ${address.address}
                  </p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">City</p>
                </div>
                <div class="col-sm-3">
                  <p class="text-muted mb-0">
                  ${address.city}
                  </p>
                </div>
                <div class="col-sm-3">
                  <p class="mb-0">State/Province/Region</p>
                </div>
                <div class="col-sm-3">
                  <p class="text-muted mb-0">
                   ${address.state}
                  </p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Zip/Postal Code</p>
                </div>
                <div class="col-sm-3">
                  <p class="text-muted mb-0">
                    ${address.zip}
                  </p>
                </div>
                <div class="col-sm-3">
                  <p class="mb-0">Country</p>
                </div>
                <div class="col-sm-3">
                  <p class="text-muted mb-0">
                    ${address.country}
                  </p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Phone Number</p>
                </div>
                <div class="col-sm-3">
                  <p class="text-muted mb-0">
                  ${address.phone}
                  </p>
                </div>
                <div class="col-sm-3">
                  <p class="mb-0">Email Address</p>
                </div>
                <div class="col-sm-3">
                  <p class="text-muted mb-0">
                   ${address.email}
                  </p>
                </div>
              </div>
              <hr>




              <hr>
              <div class="row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-3">
           
                </div>
                <div class="col-sm-3">
                 
                </div>
                <div class="col-sm-3">
                  <button type="button" class="btn btn-outline-primary ms-1" onclick="selectAddress( '${address._id}', '${id}')" >Select</button>
                  
              
                </div>
              </div>
            </div>
          </div>


        </div>
      </div>


      </div>`
                });
            }
        })
    }
    const Form = document.getElementById('checkoutForm');
    const form = Form.elements;
    const paymentMethodRadios = form['method'];

    function selectAddress(address, userId) {
        
        fetch('/user/checkout/get/one/address', {
            method: 'POST',
            body: JSON.stringify({
                address: address,
                userId: userId
            }),
            headers: {
                'Content-Type': 'application/json',
            },
        }).then((data) => data.json()).then((data) => {
            console.log(data);
            form.name.value = data.name;
            form.email.value = data.email;
            form.city.value = data.city;
            form.state.value = data.state;
            form.address.value = data.address;
            form.zip.value = data.zip;
            form.country.value = data.country;
            form.phone.value = data.phone;
            document.getElementsByClassName('bd-example-modal-lg')[0].classList.remove('show');
            document.getElementsByClassName('bd-example-modal-lg')[0].style.display = 'none';
            document.getElementsByClassName('modal-backdrop')[0].style.display = 'none';
            document.querySelector('body').classList.remove('modal-open');
        })
    }
    let totalAmount;
    const prices = document.getElementsByClassName('prices');
    const subTotal = document.getElementById('subTotal');
    const total = document.getElementById('total');
    document.addEventListener('DOMContentLoaded', function (event) {
        let totalPrice = 0;
        const array = Array.from(prices)
        array.forEach((element) => {
            totalPrice += Number(element.textContent);

        })
        subTotal.value = totalPrice;
        totalAmount = totalPrice;
        total.value = (totalPrice + (totalPrice * (12 / 100)));


    });
    const coupon = document.getElementById('coupon');
    const couponCode = document.getElementById('couponCode');
    const discount = document.getElementById('discount');
    function addCoupon(event) {
        event.preventDefault();
        fetch('/user/checkout/add/coupon', {
            method: 'POST',
            body: JSON.stringify({
                coupon: coupon.value,
                total: subTotal.value,

            }),
            headers: {
                'Content-Type': 'application/json',

            },
        }).then((response) => response.json()).then((data) => {
            if (data.success) {
                if (data.valid) {

                } else if (data.expire) {

                } else if (data.amount) {

                } else if (data.usage) {

                } else {

                    couponCode.value = data.couponCode;
                    discount.value = data.discount;
                    const NewTotal = totalAmount - Number(data.discount);
                    subTotal.value = NewTotal.toFixed(2);
                    total.value = (NewTotal + (NewTotal * (12 / 100))).toFixed(2);

                }
            }
        })
    }
    Form.addEventListener('submit', function (event) {
        event.preventDefault();
        let paymentMethodSelected = false;

        for (let i = 0; i < paymentMethodRadios.length; i++) {
            if (paymentMethodRadios[i].checked) {
                paymentMethodSelected = true;
                break;
            }
        }
        if (!paymentMethodSelected) {
            alert('please select a payment method')
            return false;
        }
        if (form.method.value == 'ONLINE') {
            stockChecking().then(() => {
                fetch('/user/checkout/payment/online', {
                    method: 'POST',
                    body: JSON.stringify({
                        total: total.value,

                    }),
                    headers: {
                        'Content-Type': 'application/json',
                    }
                }).then((response) => response.json()).then((data) => {
                    if (data.success) {

                        razorpayPayment(data.order);


                    } else {
                        console.log(data.error);
                    }
                })
            }).catch((error) => {
                alert(error)
            })

        } else {
            stockChecking().then(() => {
                Form.submit();
            }).catch((products) => {
                alert('Error')
            })
        };
    })
    function razorpayPayment(order) {
        var options = {
            "key": "rzp_test_MfdcWpDFtI5Mf9", // Enter the Key ID generated from the Dashboard
            "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
            "currency": "INR",
            "name": "Junaid",
            "description": "Test Transaction",//
            "image": "https://example.com/your_logo",
            "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
            "handler": function (response) {
                verifyPayment(response, order)
            },
            "prefill": {
                "name": "Gaurav Kumar",
                "email": "gaurav.kumar@example.com",
                "contact": "9999999999"
            },
            "notes": {
                "address": "Razorpay Corporate Office"
            },
            "theme": {
                "color": "#3399cc"
            }
        };
        var rzp1 = new Razorpay(options);
        rzp1.open();
    }
    function verifyPayment(payment, order) {
        fetch('/user/checkout/verify/payment', {
            method: 'POST',
            body: JSON.stringify({
                payment: payment,
                order: order
            }),
            headers: {
                "Content-Type": "application/json",
            },
        }).then((response) => response.json()).then((data) => {
            if (data.success) {
                Form.submit();
            }
        })
    }
    async function stockChecking() {
        return new Promise((resolve, reject) => {
            fetch('/user/checkout/check/stock', {
                method: 'POST',
                headers: {
                    "Content-Type": "application/json",
                },
            }).then((response) => response.json()).then((data) => {
                console.log(data)
                if (data.success) {
                    resolve();
                }
                else {
                    reject(data.products);
                }
            }).catch((err) => {

                console.log(err);
                reject(err)
            })
        })

    }
</script>

