<script>
   const tableBody = document.getElementById('table-body');

   const mainContainer = document.getElementById('main-container');
   const body = document.querySelector('body');
    function removeFromWishlist(id) {
        fetch('/wishlist', {
            method: 'PATCH',
            body: JSON.stringify({
                id: id,
            }),
            headers: {
                'Content-Type': 'application/json',
            },
        }).then((response) => response.json()).then((data) => {
            if (data.success) {
                const row = document.getElementById(id);
                row.parentNode.removeChild(row);
                if (tableBody.innerHTML.trim().length == 0){
                   body.removeChild(mainContainer);
                   body.innerHTML += ` <section id="gifContainer" style="height: 80vh; width: 100vw; display: flex; justify-content: center; align-items: center;">
            <img style="height: 400px; width: 500px;" src="/static/empty/wishlist.jpg" alt="">
        </section>`;
                }
            } else {
                Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Something  went wrong',
                            showConfirmButton: false,
                            imageHeight: 50,
                            timer: 1500
                        })

            }
        })
    }

    function addToCart(id, user) {
        fetch('/add/to/cart', {
                method: 'POST',
                body: JSON.stringify({
                    proId: id,
                    userId: user,
                }),
                headers: {
                    'Content-Type': 'application/json',
                },
            }).then((response) => response.json()).then((data) => {
                if (data.success) {
                    if (data.product) {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Product is already in the cart',
                            showConfirmButton: false,
                            imageHeight: 50,
                            timer: 500
                        })

                    } else {
                        const count = Number(cartCount.innerHTML);
                        cartCount.innerHTML = count + 1;
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Product added to the cart',
                            showConfirmButton: false,
                            imageHeight: 100,
                            timer: 500
                        })
                    }
                } else {
                    alert(data.error);
                }
            })
    }


</script>

